<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <HorizontalScrollView
        android:id="@+id/horizontalScrollView"
        android:layout_width="603dp"
        android:layout_height="73dp"
        android:layout_marginTop="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:checkable="false"
                app:closeIconTint="#673AB7"
                tools:text="coches" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip2"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checkable="false"
                app:closeIconTint="#673AB7"
                tools:text="motos" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip3"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checkable="false"
                app:closeIconTint="#673AB7"
                tools:text="patinetes" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip4"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checkable="false"
                app:closeIconTint="#673AB7"
                tools:text="bicicletas" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip5"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checkable="false"
                app:closeIconTint="#673AB7"
                tools:text="patines" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip6"
                android:layout_width="98dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checkable="false"
                app:closeIconTint="#673AB7"
                tools:text="overboards" />
        </LinearLayout>
    </HorizontalScrollView>

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="112dp"
        android:layout_height="152dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="124dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/hombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="hombre" />

        <RadioButton
            android:id="@+id/mujer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="mujer" />

        <RadioButton
            android:id="@+id/NC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NC" />
    </RadioGroup>

    <Switch
        android:id="@+id/terminos"
        android:layout_width="124dp"
        android:layout_height="54dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="127dp"
        android:text="aceptar terminos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup" />

    <CheckBox
        android:id="@+id/verdura"
        android:layout_width="133dp"
        android:layout_height="59dp"
        android:layout_marginEnd="44dp"
        android:text="verdura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pescado" />

    <CheckBox
        android:id="@+id/legumbres"
        android:layout_width="133dp"
        android:layout_height="59dp"
        android:layout_marginEnd="44dp"
        android:text="legumbres"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verdura" />

    <CheckBox
        android:id="@+id/carne"
        android:layout_width="133dp"
        android:layout_height="59dp"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="44dp"
        android:text="carne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/pescado"
        android:layout_width="133dp"
        android:layout_height="59dp"
        android:layout_marginEnd="44dp"
        android:text="pescado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carne" />

</androidx.constraintlayout.widget.ConstraintLayout>